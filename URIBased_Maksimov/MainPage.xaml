<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="URIBased_Maksimov.MainPage"
             Title="Signup">

    <VerticalStackLayout Padding="20">
        <Label Text="Sign Up" FontSize="24" HorizontalOptions="Center" />

        <Entry x:Name="UsernameEntry" Placeholder="Username" />
        <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email"/>
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True"/>
        <Entry x:Name="ConfirmPasswordEntry" Placeholder="Confirm Password" IsPassword="True"/>
        
        <Label x:Name="ErrorMessage" TextColor="Red" IsVisible="False" />

        <Button Text="Sign Up"
                Clicked="OnSignUpClicked"
                BackgroundColor="Blue" 
                TextColor="White"
                CornerRadius="10"/>
    </VerticalStackLayout>
</ContentPage>

